    (coprod_of_maps g‚ÇÄ g‚ÇÄ') (coprod_of_maps g‚ÇÅ g‚ÇÅ') :=
Is_pushout.mk $ Œª x,
  have _ := calc
  univ ~~ (univ : set ((c ‚ü∂ x) √ó (c' ‚ü∂ x)))
       : Bij_on.of_Is_equiv ((has_coproducts.coproduct c c').is_coproduct.universal x)
  ...  ~~ {pp : ((b‚ÇÄ ‚ü∂ x) √ó (b‚ÇÅ ‚ü∂ x)) √ó ((b‚ÇÄ' ‚ü∂ x) √ó (b‚ÇÅ' ‚ü∂ x))
